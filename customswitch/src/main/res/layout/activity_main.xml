<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginTop="42dp"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/customSwitch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="@string/switch_1"
        android:textSize="16sp"
        app:switchPadding="10dp"
        android:checked="false"
        android:thumb="@drawable/switch_thumb_1"
        app:track="@drawable/switch_track_1"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/customSwitch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/switch_2"
        android:textSize="16sp"
        app:switchPadding="10dp"
        android:checked="false"
        android:thumb="@drawable/switch_thumb_2"
        app:track="@drawable/switch_track_2"
        app:layout_constraintTop_toBottomOf="@+id/customSwitch1"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/customSwitch3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:minHeight="48dp"
        style="@style/App.Switches"
        android:checked="false"
        android:text="@string/switch_3"
        app:showText="true"
        app:switchPadding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/customSwitch2"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/customSwitch4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:thumbTint="@color/white"
        app:switchMinWidth="80dp"
        app:trackTint="@color/purple_200"
        android:checked="false"
        android:text="@string/switch_4"
        android:textSize="16sp"
        app:switchPadding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/customSwitch3"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>